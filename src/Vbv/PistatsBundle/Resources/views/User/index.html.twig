{% extends 'VbvPistatsBundle:Main:layout.html.twig' %}
{% block main %}
    {% embed 'VbvPistatsBundle:User:layout.html.twig' %}    
        {% block user_main %}
            {{ parent() }}

            <table class="records_list">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Usuario</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td>{{ entity.username }}</td>
                        <td><a href="{{ path('user_show', { 'id': entity.id }) }}">mostrar</a> <a href="{{ path('user_edit', { 'id': entity.id }) }}">editar</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        
            <script>
                $('#list-tab').addClass('active');
                $('#new-tab').removeClass('active');
            </script>

        {% endblock %}
    {% endembed %}
{% endblock %}
