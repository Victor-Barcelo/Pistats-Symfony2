{% extends 'VbvPistatsBundle:Main:layout.html.twig' %}
{% block main %}
    {% embed 'VbvPistatsBundle:User:layout.html.twig' %}    
        {% block user_main %}
            {{ parent() }}

            <table class="record_properties">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Username</th>
                        <td>{{ entity.username }}</td>
                    </tr>
                    <tr>
                        <th>Password</th>
                        <td>{{ entity.password }}</td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('user_edit', { 'id': entity.id }) }}">Edit</a>
            {{ form(delete_form) }}

            <script>
                $('#list-tab').removeClass('active');
                $('#new-tab').removeClass('active');
                $('#show-tab').removeClass('disable');
                $('#show-tab').addClass('active');
                $('#edit-tab').addClass('disable');
            </script>

        {% endblock %}
    {% endembed %}
{% endblock %}







